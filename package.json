{
  "name": "glyffitimobile",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:storage": "jest src/services/storage/__tests__",
    "test:publishing": "jest src/services/publishing/__tests__",
    "test:hooks": "jest src/hooks/__tests__",
    "test:verbose": "jest --verbose",
    "test:silent": "jest --silent",
    "test:update-snapshots": "jest --updateSnapshot"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-navigation/bottom-tabs": "^7.4.2",
    "@react-navigation/native": "^7.1.14",
    "@react-navigation/stack": "^7.4.2",
    "@solana/web3.js": "^1.98.2",
    "bs58": "^6.0.0",
    "buffer": "^6.0.3",
    "events": "^3.3.0",
    "expo": "~53.0.17",
    "expo-constants": "^17.1.7",
    "expo-crypto": "^14.1.5",
    "expo-document-picker": "^13.1.6",
    "expo-file-system": "^18.1.11",
    "expo-random": "^14.0.1",
    "expo-secure-store": "^14.2.3",
    "expo-status-bar": "~2.2.3",
    "lucide-react-native": "^0.525.0",
    "pako": "^2.1.0",
    "react": "19.0.0",
    "react-native": "0.79.5",
    "react-native-elements": "^3.4.3",
    "react-native-get-random-values": "^1.11.0",
    "react-native-paper": "^5.14.5",
    "react-native-safe-area-context": "^5.5.2",
    "react-native-screens": "^4.12.0",
    "react-native-super-grid": "^6.0.1",
    "react-native-vector-icons": "^10.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/plugin-transform-modules-commonjs": "^7.27.1",
    "@testing-library/react-native": "^12.7.2",
    "@types/react": "^19.1.8",
    "@types/react-native": "^0.72.8",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "prettier": "^3.6.2",
    "react-test-renderer": "19.0.0"
  },
  "private": true,
  "jest": {
    "preset": "react-native",
    "setupFilesAfterEnv": [
      "<rootDir>/__tests__/setup.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js",
      "**/__tests__/**/*.spec.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/android/",
      "<rootDir>/ios/",
      "<rootDir>/.expo/"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|@react-native|@react-navigation|expo|@expo|react-native-vector-icons|react-native-super-grid|react-native-elements|react-native-paper|react-native-safe-area-context|react-native-screens|lucide-react-native|@react-native-async-storage|react-native-get-random-values)/)"
    ],
    "moduleNameMapper": {
      "@react-native-async-storage/async-storage": "<rootDir>/__tests__/__mocks__/@react-native-async-storage/async-storage.js",
      "expo-crypto": "<rootDir>/__tests__/__mocks__/expo-crypto.js",
      "expo-document-picker": "<rootDir>/__tests__/__mocks__/expo-document-picker.js",
      "expo-file-system": "<rootDir>/__tests__/__mocks__/expo-file-system.js",
      "react-native-get-random-values": "<rootDir>/__tests__/__mocks__/react-native-get-random-values.js"
    },
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "ts",
      "tsx"
    ],
    "collectCoverage": false,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/*.test.{js,jsx}",
      "!src/**/__tests__/**",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    },
    "testEnvironment": "node",
    "verbose": true,
    "clearMocks": true,
    "restoreMocks": true
  }
}
